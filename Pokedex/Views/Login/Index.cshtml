
@model User



@{
    var username = Context.Session.GetString("username");
    string? UserLoggedIn = Context.Session.GetString("IsLoggedIn");
}


@if (UserLoggedIn == "true")
{
    <p>Log in to different account</p>
}
<form asp-controller="Login" asp-action="loginUser" method="post">
    <div class="form-group row">
        <div class="col-md-2">
            <label asp-for="UserName" class="control-label">Username</label>
        </div>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="UserPassword" class="control-label">Password</label>
        </div>
        <div class="col-md-10">
            <input asp-for="UserPassword" type="password" class="form-control" />
        </div>
    </div>
    <div>
        <button class="btn-outline-primary" type="submit">Log in</button>
    </div>
</form>
    <form asp-action="Index" asp-controller="User">
        <button type="submit" class="btn-outline-info m-5">Create a new user.</button>

    </form>

